---
import Base from "../layouts/Base.astro";
---

<Base>
  <main>
    <h1>magallan<a href="https://dev.magallan.es">.</a>es</h1>
  </main>
</Base>

<style>
  main {
    display: grid;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  }
  h1 {
    color: #111827;
    font-weight: 900;
    font-size: 20vw;
    font-family:
      "Darker Grotesque Variable",
      ui-sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      "Helvetica Neue",
      Arial,
      "Noto Sans",
      sans-serif;
    user-select: none;
    text-align: center;
  }
  h1 a {
    animation: rgb-shift 10s infinite ease-in-out;
    text-decoration: none;
  }
  @keyframes rgb-shift {
    0% {
      text-shadow:
        3px 0px 3px rgba(255, 0, 0, 0.4),
        -3px -0px 3px rgba(0, 255, 0, 0.4),
        -0px 3px 3px rgba(0, 0, 255, 0.4);
    }
    5% {
      text-shadow:
        2.85px 0.93px 3px rgba(255, 0, 0, 0.4),
        -2.85px -0.93px 3px rgba(0, 255, 0, 0.4),
        -0.93px 2.85px 3px rgba(0, 0, 255, 0.4);
    }
    10% {
      text-shadow:
        2.43px 1.76px 3px rgba(255, 0, 0, 0.4),
        -2.43px -1.76px 3px rgba(0, 255, 0, 0.4),
        -1.76px 2.43px 3px rgba(0, 0, 255, 0.4);
    }
    15% {
      text-shadow:
        1.76px 2.43px 3px rgba(255, 0, 0, 0.4),
        -1.76px -2.43px 3px rgba(0, 255, 0, 0.4),
        -2.43px 1.76px 3px rgba(0, 0, 255, 0.4);
    }
    20% {
      text-shadow:
        0.93px 2.85px 3px rgba(255, 0, 0, 0.4),
        -0.93px -2.85px 3px rgba(0, 255, 0, 0.4),
        -2.85px 0.93px 3px rgba(0, 0, 255, 0.4);
    }
    25% {
      text-shadow:
        0px 3px 3px rgba(255, 0, 0, 0.4),
        -0px -3px 3px rgba(0, 255, 0, 0.4),
        -3px 0px 3px rgba(0, 0, 255, 0.4);
    }
    30% {
      text-shadow:
        -0.93px 2.85px 3px rgba(255, 0, 0, 0.4),
        0.93px -2.85px 3px rgba(0, 255, 0, 0.4),
        -2.85px -0.93px 3px rgba(0, 0, 255, 0.4);
    }
    35% {
      text-shadow:
        -1.76px 2.43px 3px rgba(255, 0, 0, 0.4),
        1.76px -2.43px 3px rgba(0, 255, 0, 0.4),
        -2.43px -1.76px 3px rgba(0, 0, 255, 0.4);
    }
    40% {
      text-shadow:
        -2.43px 1.76px 3px rgba(255, 0, 0, 0.4),
        2.43px -1.76px 3px rgba(0, 255, 0, 0.4),
        -1.76px -2.43px 3px rgba(0, 0, 255, 0.4);
    }
    45% {
      text-shadow:
        -2.85px 0.93px 3px rgba(255, 0, 0, 0.4),
        2.85px -0.93px 3px rgba(0, 255, 0, 0.4),
        -0.93px -2.85px 3px rgba(0, 0, 255, 0.4);
    }
    50% {
      text-shadow:
        -3px 0px 3px rgba(255, 0, 0, 0.4),
        3px -0px 3px rgba(0, 255, 0, 0.4),
        -0px -3px 3px rgba(0, 0, 255, 0.4);
    }
    55% {
      text-shadow:
        -2.85px -0.93px 3px rgba(255, 0, 0, 0.4),
        2.85px 0.93px 3px rgba(0, 255, 0, 0.4),
        0.93px -2.85px 3px rgba(0, 0, 255, 0.4);
    }
    60% {
      text-shadow:
        -2.43px -1.76px 3px rgba(255, 0, 0, 0.4),
        2.43px 1.76px 3px rgba(0, 255, 0, 0.4),
        1.76px -2.43px 3px rgba(0, 0, 255, 0.4);
    }
    65% {
      text-shadow:
        -1.76px -2.43px 3px rgba(255, 0, 0, 0.4),
        1.76px 2.43px 3px rgba(0, 255, 0, 0.4),
        2.43px -1.76px 3px rgba(0, 0, 255, 0.4);
    }
    70% {
      text-shadow:
        -0.93px -2.85px 3px rgba(255, 0, 0, 0.4),
        0.93px 2.85px 3px rgba(0, 255, 0, 0.4),
        2.85px -0.93px 3px rgba(0, 0, 255, 0.4);
    }
    75% {
      text-shadow:
        -0px -3px 3px rgba(255, 0, 0, 0.4),
        0px 3px 3px rgba(0, 255, 0, 0.4),
        3px -0px 3px rgba(0, 0, 255, 0.4);
    }
    80% {
      text-shadow:
        0.93px -2.85px 3px rgba(255, 0, 0, 0.4),
        -0.93px 2.85px 3px rgba(0, 255, 0, 0.4),
        2.85px 0.93px 3px rgba(0, 0, 255, 0.4);
    }
    85% {
      text-shadow:
        1.76px -2.43px 3px rgba(255, 0, 0, 0.4),
        -1.76px 2.43px 3px rgba(0, 255, 0, 0.4),
        2.43px 1.76px 3px rgba(0, 0, 255, 0.4);
    }
    90% {
      text-shadow:
        2.43px -1.76px 3px rgba(255, 0, 0, 0.4),
        -2.43px 1.76px 3px rgba(0, 255, 0, 0.4),
        1.76px 2.43px 3px rgba(0, 0, 255, 0.4);
    }
    95% {
      text-shadow:
        2.85px -0.93px 3px rgba(255, 0, 0, 0.4),
        -2.85px 0.93px 3px rgba(0, 255, 0, 0.4),
        0.93px 2.85px 3px rgba(0, 0, 255, 0.4);
    }
    100% {
      text-shadow:
        3px -0px 3px rgba(255, 0, 0, 0.4),
        -3px 0px 3px rgba(0, 255, 0, 0.4),
        0px 3px 3px rgba(0, 0, 255, 0.4);
    }
  }
</style>
